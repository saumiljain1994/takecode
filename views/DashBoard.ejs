      padding: 16px 20px;
      border: none;
      cursor: pointer;

      position: fixed;
      bottom: 370px;
      right: 28px;
      width: 280px;
    }

    .assign-button {
      background-color: hsl(27, 90%, 49%);
      color: white;
      padding: 16px 20px;
      border: none;
      cursor: pointer;

      position: fixed;
      bottom: 370px;
      left: 28px;
      width: 280px;
    }

    table {
      font-family: arial, sans-serif;
      border-collapse: collapse;
      width: 100%;
    }

    td,
    th {
      border: 2px solid #fa0606;
      text-align: left;
      padding: 8px;
    }

    tr:nth-child(even) {
      background-color: #dddddd;
    }

    /* The popup form - hidden by default */
    .form-popup {
      display: none;
      position: fixed;
      bottom: 0;
      right: 15px;
      top: 77px;
      border: 3px solid #f1f1f1;
      background: white;
      z-index: 9;
    }

    .assignform-popup {
      display: none;
      position: fixed;
      bottom: 0;
      left: 15px;
      top: 160px;
      height: 50px;
      border: 3px solid #f1f1f1;
      background: white;
      z-index: 9;
    }

    /* Add styles to the form container */
    .form-container {
      max-width: 500px;
      max-height: 500px;
      padding: -9px;
      background-color: white;
      botder:2px;
      margin-left: 10px;
    }

    /* Full-width input fields */
    .form-container input[type=text],
    .form-container input[type=Number],
    .form-container input[type=email] {
      width: 100%;
      padding: 15px;
      margin: 5px 0 22px 0;
      border: none;
      background: #f1f1f1;
    }

    /* When the inputs get focus, do something */
    .form-container input[type=text]:focus,
    .form-container input[type=number]:focus,
    .form-container input[type=email]:focus {
      background-color: #ddd;
      outline: none;
    }

    /* Set a style for the submit/login button */
    .form-container .btn {
      background-color: #4CAF50;
      color: white;
      padding: 16px 20px;
      border: none;
      cursor: pointer;
      width: 100%;
      margin-bottom: 10px;
      opacity: 0.8;
    }

    /* Add a red background color to the cancel button */
    .form-container .cancel {
      background-color: red;
    }

    /* Add some hover effects to buttons */
    .form-container .btn:hover,
    .open-button:hover {
      opacity: 1;
    }
  </style>
</head>

