<!DOCTYPE html>
<html>

<head>
  <title>user</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <script>
    $(document).ready(function () {
      $("#myInput").on("keyup", function () {
        var value = $(this).val().toLowerCase();
        $("#myTable tr").filter(function () {
          $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
        });
      });
    });
  </script>
  <style>
    table {
      font-family: arial, sans-serif;
      border-collapse: collapse;
      width: 100%;


    }

    td,
    th {
      border: 2px solid rgb(43, 209, 214);
      text-align: center;
      padding: 3px;
    }

    tr:nth-child(even) {
      background-color: #dddddd;
    }

    .button2 {
      background-color: white;
      color: black;
      border: 2px solid #008CBA;
      border-radius: 13px;
    }

    .button2:hover {
      background-color: #008CBA;
      color: white;
    }

    .button3 {
      background-color: white;
      color: black;
      border: 2px solid #f44336;
      border-radius: 13px;
    }

    .button3:hover {
      background-color: #f44336;
      color: white;
    }

    input[type=text]:focus {
      width: 40%;
    }

    .btn2 {
      background-color: rgb(253, 0, 0);
      /* Blue background */
      border: none;
      /* Remove borders */
      color: white;
      /* White text */
      padding: 12px 16px;
      /* Some padding */
      font-size: 16px;
      /* Set a font size */
      cursor: pointer;
      /* Mouse pointer on hover */
    }

    /* Darker background on mouse-over */
    .btn2:hover {
      background-color: hsla(0, 72%, 43%, 0.562);
    }

    .btn1 {
      background-color: rgb(10, 25, 236);
      /* Blue background */
      border: none;
      /* Remove borders */
      color: white;
      /* White text */
      padding: 12px 16px;
      /* Some padding */
      font-size: 16px;
      /* Set a font size */
      cursor: pointer;
      /* Mouse pointer on hover */
    }

    /* Darker background on mouse-over */
    .btn1:hover {
      background-color: rgba(42, 31, 189, 0.637);
    }
  </style>

  </script>
</head>

<body
  style="background-image:URL('https://images1-fabric.practo.com/rekha-dental-clinic-and-implant-center-ghaziabad-1464245959-57469ec7e278c.png'); background-repeat: no-repeat; background-size: 1350px 600px;">

  <h1>User Data :-</h1>
  <hr>
  <input type="text" id="myInput" placeholder="Search Your name.."
    style="margin-bottom: 20px; transition: width 0.4s ease-in-out;">


  <select id="role" name="role">
    <option value="Basic">Basic</option>
    <option value="Pro">Pro</option>
    <option value="Prime">Prime</option>
  </select>



  <hr>
  <div>
    <table>
      <thead>
        <tr>
          <th> S.No </th>
          <th> Profile</th>

          <th> Name </th>
          <th> E-mail </th>
          <th> Contact </th>
          <th> Address </th>
          <th> Role </th>
          <th> Status </th>
          <th> Created_At </th>
          <th> Action </th> <!-- <th> UserID     </th> -->
       
        </tr>
      </thead>
      <tbody id="myTable">
        <% result.forEach(function(val,index) { %>
        <tr>
      
          <td> <%= index + 1 %> </td>
          <td> <img style="width:50px;height:50px; float:center" src="/uploads/<%= result[index].image%>"
            alt="trophie icon"> </td>
          <td> <%=  val.name %> </td>
          <td> <%=  val.email %> </td>
          <td> <%=  val.conatct%> </td>
          <td> <%=  val.address%> </td>
          <td> <%=  val.role %> </td>
          <td> <%= val.status  %> </td>
          <td> <%= val.created_At  %> </td>


          <td>
            <button class="btn1" style="margin-bottom: 3px; "
              onclick="window.location.href='/editUser/<%- val._id %>'"><i class="fa fa-edit"></i></button>
            <button class="btn2" onclick="window.location.href='/userRemove/<%- val._id %>'"><i
                class="fa fa-trash"></i></button>
          
        </tr>
        <%}); %>
      </tbody>
    </table>
  </div>
</body>

</html>